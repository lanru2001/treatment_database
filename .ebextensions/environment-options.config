option_settings:
  # This is not an exhaustive list of required environment variables, but just the variables that can be safely checked into the repo.
  # The rest can be set through `eb setenv` or other means.
  aws:elasticbeanstalk:application:environment:
    # Rails Settings
    RAILS_SKIP_MIGRATIONS: false
    RAILS_SKIP_ASSET_COMPILATION: false
    RAILS_LOG_TO_STDOUT: true
    RAILS_ENV: production

    # Bundle Settings
    BUNDLE_WITHOUT: "test:development"
    BUNDLE_JOBS: 4
    BUNDLE_RETRY: 3
    BUNDLER_DEPLOYMENT_MODE: true

    # Database Properties
    TREATMENT_DATABASE_ADAPTER: mysql2

    # Email
    TREATMENT_DATABASE_SMTP_HOST: email-smtp.us-east-2.amazonaws.com
    TREATMENT_DATABASE_SMTP_PORT: 587