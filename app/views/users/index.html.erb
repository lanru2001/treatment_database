<div class="header">
  <h1>Users</h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
	  <% @users.each do |user| %>
		  <tr>
			  <td><%= user.id %></td>
        <td><%= user.display_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
  		</tr>
  	<% end %>
	</tbody>
</table>
